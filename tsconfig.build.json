{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es6",
    "skipLibCheck": true,
    "incremental": false,
    "sourceMap": false
  },
  "exclude": [
    "node_modules",
    "__test__",
    "__fixtures__",
    "**/*.spec.ts",
    "jest.config.ts",
    "dist"
  ]
}
